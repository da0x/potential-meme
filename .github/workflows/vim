name: Build C++ Program

on: [push, pull_request]

jobs:
  build:
    runs-on: ${{ matrix.os }}

    strategy:
      matrix:
        os: [ubuntu-latest, macos-latest, windows-latest]
        arch: [x64, arm64]
        include:
          - os: ubuntu-latest
            arch: x64
            compiler: g++
          - os: ubuntu-latest
            arch: arm64
            compiler: g++-arm-linux-gnueabi
          - os: macos-latest
            arch: x64
            compiler: g++
          - os: macos-latest
            arch: arm64
            compiler: g++
          - os: windows-latest
            arch: x64
            compiler: g++
          - os: windows-latest
            arch: arm64
            compiler: g++

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up g++
      if: matrix.os == 'ubuntu-latest' && matrix.arch == 'x64'
      run: sudo apt-get install -y g++

    - name: Set up g++ for ARM
      if: matrix.os == 'ubuntu-latest' && matrix.arch == 'arm64'
      run: sudo apt-get install -y g++-arm-linux-gnueabi

    - name: Set up g++ on macOS
      if: matrix.os == 'macos-latest'
      run: brew install g++

    - name: Set up g++ on Windows
      if: matrix.os == 'windows-latest'
      run: choco install mingw

    - name: Build C++ program
      run: |
        ${{ matrix.compiler }} -o output main.cpp
